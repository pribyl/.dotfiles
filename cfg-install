# sudo apt update
# sudo apt -y install curl xz-utils
# sudo mkdir -m 0755 /nix && chown $USER:USER /nix

cd $HOME
curl -L https://nixos.org/nix/install | sh
. $HOME/.nix-profile/etc/profile.d/nix.sh
nix-env -iA nixpkgs.nix-tree nixpkgs.git

touch ~/.zshrc
zsh

git clone --bare https://github.com/pribyl/.dotfiles.git $HOME/.cfg
function cfg {
   git --git-dir=$HOME/.cfg/ --work-tree=$HOME $@
}
mkdir -p .config-backup
cfg checkout work
if [ $? = 0 ]; then
  echo "Checked out config.";
  else
    echo "Backing up pre-existing dot files.";
    cfg checkout 2>&1 | egrep "\s+\." | awk {'print $1'} | xargs -I{} mv {} .config-backup/{}
fi;
cfg checkout work
cfg config status.showUntrackedFiles no
